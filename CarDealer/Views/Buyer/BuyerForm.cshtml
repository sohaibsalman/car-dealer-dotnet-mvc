@model Buyer

@{
    ViewData["Title"] = "Create";
}

@{ 
    string heading = Model.BuyerID == 0 ? "Create" : "Edit";
}

<h1>@heading</h1>

@using (Html.BeginForm("Save", "Buyer"))
{
    <div class="row">
        <div class="col-4">
            <h3>Buyer</h3>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LastName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Address, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.City, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.State, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.State, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Zip, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Zip, htmlAttributes: new { @class = "form-control" })
            </div>

            @Html.HiddenFor(m => m.BuyerID)

            @{ 
                string buttonValue = Model.BuyerID == 0 ? "Create" : "Save";
            }  
            <div class="form-group">
                <input type="submit" value=@buttonValue class="btn btn-primary" />
            </div>

            <div class="form-group">
                @Html.ActionLink("Back to list", "Index")
            </div>
        </div>
    </div>

}

