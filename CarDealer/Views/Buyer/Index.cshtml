@model IList<Buyer>

@{
    ViewData["Title"] = "Index";
}

<h1>Buyers</h1>

@Html.ActionLink("Create New", "Create")

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>
            <td>
                @Html.ActionLink("Edit", "Edit", routeValues: new { id=item.BuyerID}) |
                @Html.ActionLink("Details", "Details", routeValues: new { id = item.BuyerID }) |
                @Html.ActionLink("Delete", "Delete", routeValues: new { id = item.BuyerID })
            </td>
        </tr>
            }
        }
    </tbody>
</table>