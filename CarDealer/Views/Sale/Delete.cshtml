@model Sale 

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-4">
        <h5>Sale</h5>
        <hr />

        @using (Html.BeginForm())
        {
            <table class="table table-borderless">
                <tr>
                    <th>Sale Date</th>
                    <td>@Model.SaleDate</td>
                </tr>
                <tr>
                    <th>Sale Price</th>
                    <td>@Model.SalePrice</td>
                </tr>
                <tr>
                    <th>Buyer</th>
                    <td>@Model.Buyer.FirstName</td>
                </tr>
                <tr>
                    <th>Salesperson</th>
                    <td>@Model.Salesperson.Email</td>
                </tr>
                <tr>
                    <th>Vehicle</th>
                    <td>@Model.Vehicle.Year @Model.Vehicle.Color @Model.Vehicle.Manufacturer @Model.Vehicle.Model</td>
                </tr>
            </table>

            @Html.HiddenFor(m => m.SaleID)

            <input type="submit" value="Delete" class="btn btn-danger" />
            <span> | </span>
            @Html.ActionLink("Back to list", "Index")
        }

    </div>
</div>
